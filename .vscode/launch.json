{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: test_02_zot_import (integration)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/test_02_zot_import.py"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: test_03_zot_export (integration)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/test_03_zot_export.py"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: test_04_to_zotero_test (integration)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-m", "integration", "-s", "tests/test_04_to_zotero_test.py"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: test_05_zot_clean (integration)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/test_05_zot_clean.py"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: test_06_dotenv (integration)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/test_06_dotenv.py"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "zotsync import: LitReview CSV",
      "type": "debugpy",
      "request": "launch",
      "module": "espace.zotsync",
      "args": [
        "import",
        "--library-id",
        "6132665",
        "tests/data/asreview_relevant+irrelevant+not_seen_LitReview_Government_Semantic_Interoperability.csv"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
